<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cejteam.ticketmanager.InformacionDeleEvento">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:background="@color/blanco"
        >


        <ImageView
            android:id="@+id/mostrarimagen"
            android:layout_width="300dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/deportivo" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/mostrartitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco"
            android:layout_gravity="center_horizontal"
            android:text="Evento"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="38dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mostrarfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:layout_marginRight="10dp"
                android:text="fecha"
                android:textColor="@color/negro"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/mostrarcodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:text="codigo"
                android:textColor="@color/negro"
                android:textSize="18dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/mostrardescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/blanco"
            android:text="Descripcion"
            android:textColor="@color/negro"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mostraramount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:text="Acerca de"
            android:textColor="@color/negro"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mostrarmonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:text="Monto "
            android:textColor="@color/negro"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:textStyle="bold" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="18dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginRight="97dp"
    android:layout_marginEnd="97dp"
    android:layout_below="@+id/layout1"
    android:layout_alignRight="@+id/layout1"
    android:layout_alignEnd="@+id/layout1">


    <Button
        android:id="@+id/mostrarregresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="REGRESAR" />

</LinearLayout>





</RelativeLayout>

