<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="italic"

    android:background="@color/blanco"

    tools:context="com.cejteam.ticketmanager.EventosFuturosActivity">

    <ListView
        android:id="@+id/eventosFuturo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_below="@id/eventosFuturo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/futuroDeporte"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventosFuturo"
                android:layout_marginTop="24dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/futuroReligion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:text="TextView"
                android:layout_below="@+id/futuroDeporte" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/futuroMusica"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"

                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="TextView"
                android:layout_below="@+id/futuroReligion" />

            <TextView
                android:id="@+id/futuroMonto"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_below="@+id/futuroMusica"
                android:layout_marginTop="24dp"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


