<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="italic"

    android:background="@color/blanco"

    tools:context="com.cejteam.ticketmanager.EventosFuturosActivity">

    <ListView
        android:id="@+id/eventosFuturo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textStyle="italic"

        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/futuroDeporte"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventosFuturo"
        android:layout_marginTop="31dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/futuroReligion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"

        android:layout_marginTop="24dp"
        android:text="TextView"
        android:layout_below="@+id/futuroDeporte"
         />

    <TextView
        android:id="@+id/futuroMusica"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"

        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:layout_below="@+id/futuroReligion" />

    <TextView
        android:id="@+id/futuroMonto"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"

        android:layout_height="wrap_content"
        android:layout_below="@+id/futuroMusica"
        android:layout_marginTop="19dp"
        android:text="TextView" />
</RelativeLayout>


