<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cejteam.ticketmanager.EliminarEvento">

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/eliminareventotitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Evento"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45dp"

        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="65dp"
        android:layout_below="@id/eliminareventotitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_margin="25dp"
            android:layout_width="88dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:text="Codigo:"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>
        <EditText
            android:layout_marginTop="56dp"
            android:id="@+id/codigodelevento"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="13dp"
            android:hint="Escriba el codigo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/linear"
        android:gravity="center"
        tools:layout_centerInParent="true"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/cancelarevento"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Eliminar"
            android:textSize="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/blanco"
            />
    </LinearLayout>


</RelativeLayout>
